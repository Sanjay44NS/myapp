<h2>Search Books</h2>
<form action="/books" method="GET">
    <div>
        <label>
            Title
            <input type="text" name="title" 
            value="<%=searchOptions !=null?searchOptions.title:''%>"/>
        </label>
    </div>
    <div>
        <label>
            Published After
            <input type="date" name="publishedAfter" 
            value="<%=searchOptions !=null?searchOptions.publishedAfter:''%>"/>
        </label>
    </div>
    <div>
        <label>
            Published Before
            <input type="date" name="publishedBefore" 
            value="<%=searchOptions !=null?searchOptions.publishedBefore:''%>"/>
        </label>
    </div>
    <button type="submit">Search</button>
</form>


<div>

<%if(typeof(books) !== 'undefined'){
    books.forEach(book => {%>
        <div>
            <img height="150" width="100" src="<%=book.coverImagePath%>"/>
            <%=book.title%>
        </div>
        
    <%});
}%>
</div>